<h1>Tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <%= check_box_tag(task.completed, value='1', checked=task.completed) %>
    <%= link_to "<i class='fa-solid fa-trash'>".html_safe,
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></i></li>
  <% end %>
</ul>

<%= link_to "Make a new task", tasks_new_path %>
